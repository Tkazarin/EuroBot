# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://eurobot:eurobot@localhost:5432/eurobot

# JWT Settings
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin credentials (for initial setup)
ADMIN_EMAIL=admin@eurobot.ru
ADMIN_PASSWORD=admin123

# Email settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@eurobot.ru

# Yandex SmartCaptcha (https://console.yandex.cloud/folders/.../smartcaptcha)
SMARTCAPTCHA_SERVER_KEY=your-server-key-from-yandex
SMARTCAPTCHA_CLIENT_KEY=your-client-key-from-yandex

# Yandex Maps API Key
VITE_YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# File upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

